#!/bin/bash

cd /root

if [ -d "/root/.vim" ]
then
  echo "Directory /root/.vim exists."
else
  echo "Error: Directory /root/.vim does not exists."
  mkdir /root/.vim
  cd /root/.vim
fi

if [ -d "/root/.vim/colors" ]
then
  echo "Directory /root/.vim/colors exists."
  cd /root/
  git clone https://github.com/sickill/vim-monokai.git
  cp -v /root/vim-monokai/colors/monokai.vim /root/.vim/colors
  rm -rvf vim-monokai
else
  echo "Error: Directory /root/.vim does not exists."
  mkdir /root/.vim/colors
  cd /root/
  git clone https://github.com/sickill/vim-monokai.git
  cp -v /root/vim-monokai/colors/monokai.vim /root/.vim/colors
  rm -rvf vim-monokai
fi

cd /root
rm -rf myvimrc
mkdir myvimrc
cd myvimrc
git init
git remote add origin https://github.com/jorgediazjr/vimrc.git
git pull origin master

cd /root
tee -a .bashrc << EOF
export VIMINIT='source $MYVIMRC'
export MYVIMRC='~/myvimrc/.vimrc'
EOF
